#step 2
from csv import writer
import csv
import pandas as pd

def convert(first,second, third):
    df = pd.read_csv('onlyNumbers.csv')
    line_count=0
    with open('onlyNumbers.csv') as csv_file:
        csv_reader = csv.reader(csv_file, delimiter=',')
        with open('window.csv','a+',  newline='') as write_obj:
            for row in csv_reader:
                #change parameter here if larger than three for window
                if((line_count-3)>0):
                    csv_writer = writer(write_obj)
                    csv_writer.writerow([df.iloc[line_count-first][0],df.iloc[line_count-second][0],df.iloc[line_count-third][0],df.iloc[line_count][0]] )
                line_count+=1

convert(1,2,3)